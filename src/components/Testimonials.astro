---
import config from '../config.json';
---

<section id="testimonials" class="testimonials-section">
  <div class="testimonials-container">
    <div class="testimonials-header">
      <span class="section-badge">TESTIMONIOS</span>
      <h2 class="testimonials-title">Lo Que Dicen Nuestros Clientes</h2>
      <p class="testimonials-subtitle">
        La satisfacci√≥n de nuestros clientes es nuestra mejor carta de presentaci√≥n.
      </p>
    </div>

    <div class="testimonials-grid">
      {config.testimonials.map((testimonial) => (
        <div class="testimonial-card">
          <div class="testimonial-header">
            <div class="testimonial-avatar">
              <span class="avatar-initial">{testimonial.name.charAt(0)}</span>
            </div>
            <div class="testimonial-info">
              <h3 class="testimonial-name">{testimonial.name}</h3>
              <p class="testimonial-service">{testimonial.service}</p>
            </div>
          </div>

          <div class="testimonial-rating">
            {Array.from({ length: testimonial.rating }, (_, i) => (
              <span class="star">‚òÖ</span>
            ))}
          </div>

          <p class="testimonial-text">"{testimonial.text}"</p>

          <div class="testimonial-quote-icon">‚ùù</div>
        </div>
      ))}
    </div>

    <div class="testimonials-cta">
      <p class="cta-text">¬øListo para tu mejor corte?</p>
      <a href={`https://wa.me/${config.business.whatsapp}`} class="cta-button" target="_blank" rel="noopener noreferrer">
        <span class="button-icon">üí¨</span>
        Agenda tu cita
      </a>
    </div>
  </div>
</section>

<style>
  .testimonials-section {
    padding: 8rem 2rem;
    background: #0a0a0a;
    position: relative;
    overflow: hidden;
  }

  .testimonials-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(212, 175, 55, 0.3),
      transparent
    );
  }

  .testimonials-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-badge {
    display: inline-block;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    color: #d4af37;
    font-weight: 600;
    margin-bottom: 1rem;
    padding: 0.5rem 1.5rem;
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: 2rem;
    background: rgba(212, 175, 55, 0.05);
  }

  .testimonials-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
  }

  .testimonials-subtitle {
    font-size: 1.125rem;
    color: #a8a8a8;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .testimonial-card {
    background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
    padding: 2.5rem;
    border-radius: 1rem;
    border: 1px solid rgba(212, 175, 55, 0.1);
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .testimonial-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 1px;
    background: linear-gradient(
      135deg,
      rgba(212, 175, 55, 0.2),
      transparent
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-4px);
    border-color: rgba(212, 175, 55, 0.3);
  }

  .testimonial-card:hover::before {
    opacity: 1;
  }

  .testimonial-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .testimonial-avatar {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 50%;
    background: linear-gradient(135deg, #d4af37 0%, #f4e5c3 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .avatar-initial {
    font-size: 1.25rem;
    font-weight: 700;
    color: #0a0a0a;
    font-family: 'Playfair Display', serif;
  }

  .testimonial-info {
    flex: 1;
  }

  .testimonial-name {
    font-size: 1.125rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 0.25rem 0;
  }

  .testimonial-service {
    font-size: 0.875rem;
    color: #a8a8a8;
    margin: 0;
  }

  .testimonial-rating {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
  }

  .star {
    color: #d4af37;
    font-size: 1rem;
  }

  .testimonial-text {
    font-size: 1rem;
    line-height: 1.8;
    color: #d0d0d0;
    font-style: italic;
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .testimonial-quote-icon {
    position: absolute;
    bottom: 1.5rem;
    right: 1.5rem;
    font-size: 4rem;
    color: rgba(212, 175, 55, 0.1);
    font-family: 'Playfair Display', serif;
    line-height: 1;
    pointer-events: none;
  }

  .testimonials-cta {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.05) 0%, transparent 100%);
    border-radius: 1rem;
    border: 1px solid rgba(212, 175, 55, 0.1);
  }

  .cta-text {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2.5rem;
    background: linear-gradient(135deg, #d4af37 0%, #f4e5c3 100%);
    color: #0a0a0a;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(212, 175, 55, 0.2);
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(212, 175, 55, 0.3);
  }

  .button-icon {
    font-size: 1.25rem;
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 4rem 1.5rem;
    }

    .testimonials-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .testimonial-card {
      padding: 2rem;
    }

    .testimonials-cta {
      padding: 2rem 1.5rem;
    }

    .cta-text {
      font-size: 1.25rem;
    }
  }
</style>
